<div id="wrapper">
<nav class="navbar navbar-expand-lg navbar-light bg-light" id="navMain">
  <a class="navbar-brand" href="#">Mongo</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/saved">Saved Articles</a>
      </li>
      <button class="btn btn-outline-success my-2 my-sm-0" id="scrape" type="submit">Scrape</button>
    
  </div>
</nav>


<div class="articles container">

    {{#each articles }}
    <div class="panel panel-default" id="artDiv">
      <div class="panel-heading">
        <h3 class="panel-title">{{title}}</h3>
      </div>
      <div class="panel-body">
        <a class="artLink" href={{link}}>{{link}}</a>
        <button data-id={{_id}} id="savenote" class="btn btn-danger pull-right save-article">Save Article</button>
      </div>
    </div>
    <br />
    <br />
    {{/each}}

</div>